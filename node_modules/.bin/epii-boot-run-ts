#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/ts-node" ]; then
  "$basedir/ts-node"  "$basedir/../epii-boot/bin/epii-boot-run-ts" "$@"
  ret=$?
else 
  ts-node  "$basedir/../epii-boot/bin/epii-boot-run-ts" "$@"
  ret=$?
fi
exit $ret
